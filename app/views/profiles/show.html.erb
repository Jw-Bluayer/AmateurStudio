<p id="notice"><%= notice %></p>

<p>
  <strong>이름:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>거주지:</strong>
  <%= @user.place %>
</p>

<p>
  <strong>자기소개:</strong>
  <%= @user.introduction %>
</p>
<section>
  <%= form_with(model: @profile, local: true) do |form| %>


  <div class="field">
    <%= form.label :image %><br>
    <%= form.file_field :image, accept: 'image/png,image/gif,image/jpeg' %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
      <% end %>
</section>
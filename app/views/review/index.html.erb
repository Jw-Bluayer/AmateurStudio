<h1>메인 화면 페이지</h1>
<p>글 목록을 보여줍니다.</p>
<hr>
<% if @listReview.empty? %>
    <h3 class="text-center">글이 없습니다!</h3>
<% else %>
    <table class="table table-hover table-striped">
        <thead>
            <th width="100px">글 번호</th>
            <th>글 제목</th>
            <th width="60px"></th>
        </thead>
        <tbody>
            <% @listReview.each do |oneReview| %>
                <tr>
                    <td><%= oneReview.id %></td>
                    <td>
                        <%= link_to oneReview.title, "/reviews/#{oneReview.id}" %>
                    </td>
                    <td>
                        <%= link_to 'Edit', "/reviews/#{oneReview.id}/edit" %>
                        <%= link_to 'Destroy', "/reviews/#{oneReview.id}" %>
                    </td>
                </tr>
            <% end %>
        </tbody>
        <tfoot>

        </tfoot>
    </table>
<% end %>

<%= link_to '리뷰 작성', "/reviews/new" %>

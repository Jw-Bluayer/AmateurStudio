<div class="posts-wrapper row">
  <div class="container">
  <div class="flex">

    <% @posts.each do |post| %>

    <div class="post">

      <div class = "image col-4">

         <div class="image_block" >
           <%= link_to (image_tag ("#{post.image.medium}")), (@user.present? ? [post.user, post] : post)%>

            <div class = "contents p-3 d-flex flex-column justify-content-end">
              <h4 class = "name" alrign= center><%= post.title%></h4>
              <h5 class = "info"> <%= post.content %> </h5>
              <center>
                <%= link_to "더보기",user_post_path(:id => post.id, :user_id => post.user_id) %>
              </center>
            </div>
         </div>


       </div>
      </div>

  <% end %>

    </div>
  </div>
</div>

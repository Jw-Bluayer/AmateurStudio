<p id="notice"><%= notice %></p>


<p>
  <td><%= image_tag("#{@post.image}")%></td>
</p>


<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<%= link_to 'Edit', (@user.present? ? edit_user_post_path(@user)  : edit_post_path(@post)), class: 'btn btn-default' %> |
<%= link_to 'Back', (@user.present? ? user_posts_path(@user) : posts_path), class: 'btn btn-default' %>

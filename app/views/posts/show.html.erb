<p id="notice"><%= notice %></p>


<p>
  <td><%= image_tag("#{@post.image}")%></td>
</p>


<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<% if can? :update, Post %>
<% if current_user.id == @user.id %>
<%= link_to 'Edit', (@user.present? ? edit_user_post_path(@user)  : edit_post_path(@post)), class: 'btn btn-default' %> 
<% end %>
<% end %>

<%= render "comments/comments" %>
<head>
  <link rel="stylesheet" type="text/css" href="stylesheet/application.css" media="screen" />
</head>



<body>

<h1 style="text-align: center">Edit Profile</h1>
<div class="sign">


<%= form_for @user, url: "/user/#{@user.id}", method: 'patch' do |form| %>


    <div class="field">
      <%= form.label :이름 %><br>
      <%= form.text_field :name %>
    </div>

    <div class="field">
      <%= form.label :거주지 %><br>
      <%= form.text_area :place %>
    </div>
    <div class="field">
      <%= form.label :자기소개 %><br>
      <%= form.text_area :introduction %>
    </div>

    <div class="field">
      <%= form.label :image %><br>
      <%= form.file_field :image, accept: 'image/png,image/gif,image/jpeg' %>
    </div>
   
    <div class="actions">
      <%= form.submit %>
    </div>


<% end %>
</div>
</body>
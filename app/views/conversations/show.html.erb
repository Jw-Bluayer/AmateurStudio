<head>
  <link rel="stylesheet" type="text/css" href="application.scss" media="screen" />
  <style>
  img.avatar-32 {
  width: 32px;
  height: 32px;
 }
 </style>
</head>


<div class="row">
  <div class="col-md-9">
    <ul id="conversations-list">
      <% @conversations.each do |conversation| %>
        <%= render 'conversations/conversation', conversation: conversation, user: current_user %>
      <% end %>
    </ul>
  </div>

  <div class="col-md-3">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">User list</h3>
      </div>
      <div class="panel-body">
        <ul>
          <% @users.each do |user| %>
          <li>
          <% if user.image.file.nil? %>
                <%= link_to image_tag("https://cdn0.vox-cdn.com/images/verge/default-avatar.v989902574302a6378709709f7baab789b242ebbb.gif", class: "avatar-32"), conversations_path(user_id: user), remote: true, method: :post%>
          <% else%>
                <%= link_to image_tag("user.image.main", class: "avatar-32"), conversations_path(user_id: user), remote: true, method: :post %>
          <% end %> 
          <%= link_to user.name, conversations_path(user_id: user), remote: true, method: :post %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>

<li id="comment_<%=comment.id %>">
  <%= link_to "#{comment.user.name}", "/user/#{comment.user_id}" %>

  <%= comment.body %>,
  <%= time_ago_in_words(comment.created_at) %> ago
  <%= link_to 'delete', [comment.post, comment], method: :delete, remote: true, data: { confirm: "Are you sure?" } %>
</li>

<head>
 <style>

.sign{
  position: relative;
  margin: auto;
  padding: 20px 20px 20px;
  width: 500px;
  background: white;
  
}

.field{
  position: relative;
  max-width: 500px;
  padding: 25px 16px 8px;
}

.inputarea{    
  width: 345px;
  flex: 1;
  height: 40px;
  background-image: none;
  line-height: 24px;
  font-size: 18px;
  color: #574751;
  color: var(--maroon);
  border: none;
  border-bottom: 1px solid #ffc200;
    outline: none;
}


body {
  font: 13px/20px "MONTSERRAT", Tahoma, Verdana, sans-serif;
  color: #404040;
  background: white;
}
</style>





 </script>
</head>


<body>
<div class = "sign">

<h2>Good to see you again!</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.email_field :email, autofocus: true ,placeholder: "Email" , class: "inputarea" %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "off" ,placeholder: "Password", class: "inputarea" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <button type="submit" class="btn btn-warning">Log in</button>

    <%= f.submit "Log in" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>
</body>
<head>
  <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
</head>

<div class="w3-content w3-display-container" style="max-width:800px">
  <img class="mySlides" src="../assets/slide_img1.jpg" style="width:100%">
  <img class="mySlides" src="../assets/slide_img2.jpg" style="width:100%">
  <img class="mySlides" src="../assets/slide_img3.jpg" style="width:100%">
  <div class="w3-center w3-container w3-section w3-large w3-text-white w3-display-bottommiddle" style="width:100%">
    <div class="w3-left w3-hover-text-khaki" onclick="plusDivs(-1)">&#10094;</div>
    <div class="w3-right w3-hover-text-khaki" onclick="plusDivs(1)">&#10095;</div>
    <span class="w3-badge demo w3-border w3-transparent w3-hover-white" onclick="currentDiv(1)"></span>
    <span class="w3-badge demo w3-border w3-transparent w3-hover-white" onclick="currentDiv(2)"></span>
    <span class="w3-badge demo w3-border w3-transparent w3-hover-white" onclick="currentDiv(3)"></span>
  </div>
</div>



<div class = "flex">
  <form action= "/home/photographer">
	   <button class="button button--itzel-black-photo button--size-l button--border-thin button--text-thin"><i class="button__icon icon icon_p"></i><span>Photographer</span></button>
  </form>
  <form action= "/home/model">
	   <button class="button button--itzel-black-model button--size-l button--border-thin button--text-thin"><i class="button__icon icon /app/assets/images/photographer.png"></i><span>Model</span></button>
  </form>
</div>

<link href='https://fonts.googleapis.com/css?family=Montserrat:400,700' rel='stylesheet' type='text/css'>
<link href='https://fonts.googleapis.com/css?family=Lato:300' rel='stylesheet' type='text/css'>
<link rel="stylesheet" type="text/css" href="home_index.css" media="screen">

<!-- 모든 포스트 불러오기 -->

<body>

<div class ="flex_index">
<% @post.each do |post| %>
<div class="responsive">
    <div class="gallery">
        <a target="_blank">
          <%= image_tag("#{post.image.main}")%>
        </a>
      <div class="desc">
      <h2>
        <%= post.title %>
      </h2>
      <br>
      <%= link_to "더보기",user_post_path(:id => post.id, :user_id => post.user_id) %>
      </div>
      </div>
    </div>
<% end %>
</div>

<div class="text-center" id="posts">
  <%= paginate @posts %>
</div>
</body>

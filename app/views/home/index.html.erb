<style>
div.flex {
  display: flex
  flex-direction: row;
}
div.gallery {
    margin: 5px;
    border: 1px solid #ccc;
    float: left;
    width: 180px;
}

div.gallery:hover {
    border: 1px solid #777;
}

div.gallery img {
    width: 100%;
    height: auto;
}

div.desc {
    padding: 15px;
    text-align: center;
}

.responsive {
    padding:0 6px;
    float: left;
    width: 24.99999%;
}

@media only screen and (max-width: 700px){
    .responsive {
        width: 49.99999%;
        margin: 6px 0;
    }
}

@media only screen and (max-width: 500px){
    .responsive {
        width: 100%;
    }
}

</style>
<body>

<div class ="flex_index">
<% @post.each do |post| %>
<div class="responsive">
    <div class="gallery">
        <a target="_blank">
          <%= image_tag("#{post.image.main}")%>
        </a>
      <div class="desc">
      <h2>
        <%= post.title %>
      </h2>
      <br>
      <%= link_to "더보기",user_post_path(:id => post.id, :user_id => post.user_id) %>
      </div>
      </div>
    </div>
<% end %>
</div>

<div class="text-center" id="posts">
  <%= paginate @posts %>
</div>
</body>
